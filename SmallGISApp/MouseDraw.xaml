<Window x:Class="SmallGISApp.MouseDraw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallGISApp"
        mc:Ignorable="d"
        Title="MouseDraw" Height="450" Width="800">
    <Grid>
        <Canvas Name="MousedrawingCanvas" Background="White" MouseDown="MousedrawingCanvas_MouseDown" MouseMove="MousedrawingCanvas_MouseMove">
            <Grid Height="147" Width="377">

                <Button x:Name="SwitchDrawButton" Content="开始画图" HorizontalAlignment="Left" Margin="116,13,0,0" VerticalAlignment="Top" Click="MouseDrawButton_Click"/>

                <TextBlock TextWrapping="Wrap" Text="选择绘画类型" Margin="20,47,235,59" RenderTransformOrigin="0.51,1.447"/>
                <RadioButton GroupName="DrawType" Name="rbPoint" Content="点" IsChecked="True" Margin="116,48,225,83" />
                <RadioButton  GroupName="DrawType" Name="rbLine" Content="线" HorizontalAlignment="Left" Margin="116,74,0,0" VerticalAlignment="Top"/>
                <RadioButton  GroupName="DrawType" Name="rbPolygon" Content="面" HorizontalAlignment="Left" Margin="116,99,0,0" VerticalAlignment="Top"/>
                <TextBlock TextWrapping="Wrap" Text="鼠标画图" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,15,0,0"/>


                <!--<Button Content="画点" Click="PointDrawButton_Click" HorizontalAlignment="Left" Canvas.Left="124" Canvas.Top="29" VerticalAlignment="Top" Margin="116,45,0,0" />
                <Button Content="画线" Click="LineDrawButton_Click" HorizontalAlignment="Left" Canvas.Left="124" Canvas.Top="29" VerticalAlignment="Top" Margin="200,45,0,0"/>
                <Button Content="画面" Click="PolygonDrawButton_Click" HorizontalAlignment="Left" Canvas.Left="124" Canvas.Top="29" VerticalAlignment="Top" Margin="157,45,0,0"/>-->

            </Grid>




            <!-- Later we will add our Ellipse (Point) here -->
        </Canvas>
    </Grid>
</Window>
