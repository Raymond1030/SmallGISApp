<Window x:Class="SmallGISApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallGISApp"
        mc:Ignorable="d"
        Title="SmallGISApp" Height="450" Width="800">
    <Canvas Name="drawingCanvas" Background="White">
        <Grid>

            <TextBlock HorizontalAlignment="Left" Margin="89,33,0,0" TextWrapping="Wrap" Text="点" VerticalAlignment="Top"/>
            <TextBox x:Name="Point_Text_X" HorizontalAlignment="Left" Margin="156,31,0,0" TextWrapping="Wrap" Text="90" VerticalAlignment="Top" Width="120" />
            <TextBlock x:Name="X" HorizontalAlignment="Left" Margin="129,33,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top"/>
            <TextBox x:Name="Point_Text_Y"   HorizontalAlignment="Left" Margin="335,31,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="120" />
            <TextBlock Name="Y" HorizontalAlignment="Left" Margin="308,33,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top"/>
            <Button Content="画点" HorizontalAlignment="Left" Margin="493,30,0,0" VerticalAlignment="Top" Click="Button_Click"/>

        </Grid>

        <!-- Later we will add our Ellipse (Point) here -->
    </Canvas>
</Window>
